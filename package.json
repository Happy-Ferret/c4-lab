{
  "name": "rpd-c4-lab",
  "version": "0.4.0",
  "description": "web interface to create software architecture diagrams",
  "main": "src/index.js",
  "scripts": {
    "test": "karma start karma.conf.js --single-run",
    "test:watch": "karma start karma.conf.js",
    "build": "mkdir -p dist && browserify -g uglifyify src/index.js -d | exorcist dist/bundle.js.map > dist/bundle.js && cp src/index.html dist/",
    "serve": "live-server src",
    "watch": "watchify src/index.js -o 'node_modules/.bin/exorcist src/bundle.js.map > src/bundle.js' -d",
    "start": "parallelshell 'npm run watch -s' 'npm run serve -s' 'npm run test:watch'"
  },
  "keywords": [
    "diagrams",
    "software",
    "architecture"
  ],
  "author": "Ryan Davis <ryepup@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.4.8",
    "angular-hotkeys": "^1.6.0",
    "angular-ui-bootstrap": "^0.14.3",
    "lodash": "^3.10.1",
    "ng-file-upload": "^11.0.2",
    "ng-focus-if": "^1.0.4",
    "uuid": "^2.0.1",
    "viz.js": "^1.3.0",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.4.8",
    "browserify": "^12.0.1",
    "browserify-css": "^0.8.4",
    "browserify-ngannotate": "^2.0.0",
    "cssify": "^1.0.2",
    "envify": "^3.4.0",
    "exorcist": "^0.4.0",
    "function-bind": "^1.0.2",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.16",
    "karma-browserify": "^4.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.2",
    "live-server": "^0.9.0",
    "parallelshell": "^2.0.0",
    "phantomjs": "^1.9.19",
    "stringify": "^3.2.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      "browserify-css",
      [
        "stringify",
        {
          "extensions": [
            ".txt",
            ".json",
            ".dot",
            ".html"
          ]
        }
      ],
      "envify",
      "browserify-ngannotate",
      [
        "uglifyify",
        {
          "ignore": "**/*.spec.js"
        }
      ]
    ]
  }
}
