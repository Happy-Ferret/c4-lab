{
  "name": "rpd-c4-lab",
  "config": {
    "codeclimate_token": "ededa0c572bd7d90bd93f248d5510d2ff8f6d4a658f1349590a8c2e5d49497cc"
  },
  "version": "0.21.1",
  "description": "web interface to create software architecture diagrams",
  "main": "src/index.js",
  "scripts": {
    "test": "karma start karma.conf.js --single-run",
    "test:watch": "karma start karma.conf.js",
    "codeclimate": "CODECLIMATE_REPO_TOKEN=$npm_package_config_codeclimate_token codeclimate-test-reporter < reports/lcov.info",
    "build": "npm-run-all build:ensure-dist -p build:vendor build:app build:html",
    "build:ensure-dist": "mkdir -p dist",
    "build:vendor": "browserify -g [uglifyify --ignore 'node_modules/viz.js/*'] -r angular -r babel-polyfill -r viz.js -r angular-ui-bootstrap -r angular-ui-router -r angular-animate -r ng-file-upload -r md5 -r codemirror -r lz-string -r s-expression -r wordwrap -r lodash -r codemirror/addon/edit/matchbrackets -r codemirror/mode/commonlisp/commonlisp -r codemirror/addon/edit/closebrackets -r path > dist/vendor.min.js",
    "build:app": "browserify -x angular -x babel-polyfill -x viz.js -x angular-ui-bootstrap -x angular-ui-router -x angular-animate -x ng-file-upload -x md5 -x codemirror -x lz-string -x s-expression -x wordwrap -x lodash -x codemirror/addon/edit/matchbrackets -x codemirror/mode/commonlisp/commonlisp -x codemirror/addon/edit/closebrackets -x path src/index.js -d | exorcist dist/bundle.js.map > dist/bundle.js",
    "build:html": "cp src/index.html dist/",
    "serve": "live-server src",
    "serve:dist": "live-server dist",
    "watch": "watchify src/index.js -o 'node_modules/.bin/exorcist src/bundle.js.map > src/bundle.js' -d",
    "start": "npm-run-all --parallel 'watch -s' 'serve -s' 'test:watch'"
  },
  "keywords": [
    "diagrams",
    "software",
    "architecture"
  ],
  "author": "Ryan Davis <ryepup@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.6",
    "angular-animate": "^1.5.6",
    "angular-ui-bootstrap": "^2.4.0",
    "angular-ui-codemirror": "^0.3.0",
    "angular-ui-router": "^1.0.0-alpha0",
    "codemirror": "^5.22.2",
    "lodash": "^4.17.4",
    "lz-string": "^1.4.4",
    "md5": "^2.2.1",
    "ng-file-upload": "^12.2.13",
    "s-expression": "^3.0.3",
    "viz.js": "^1.4.1",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.6",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "browserify-css": "^0.9.2",
    "browserify-istanbul": "^2.0.0",
    "browserify-ngannotate": "^2.0.0",
    "codeclimate-test-reporter": "^0.4.0",
    "envify": "^4.0.0",
    "exorcist": "^0.4.0",
    "function-bind": "^1.0.2",
    "jasmine-core": "^2.4.1",
    "karma": "^1.4.0",
    "karma-browserify": "^5.1.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.0.0",
    "phantomjs-prebuilt": "^2.1.14",
    "stringify": "^5.1.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-ngannotate",
      "browserify-css",
      [
        "stringify",
        {
          "extensions": [
            ".txt",
            ".json",
            ".dot",
            ".html",
            ".sexp"
          ]
        }
      ],
      "envify",
      [
        "uglifyify",
        {
          "ignore": "**/*.spec.js",
          "mangle": false
        }
      ]
    ]
  }
}
