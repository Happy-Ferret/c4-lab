{
  "name": "rpd-c4-lab",
  "config": {
    "codeclimate_token": "ededa0c572bd7d90bd93f248d5510d2ff8f6d4a658f1349590a8c2e5d49497cc"
  },
  "version": "0.15.0",
  "description": "web interface to create software architecture diagrams",
  "main": "src/index.js",
  "scripts": {
    "test": "karma start karma.conf.js --single-run",
    "test:watch": "karma start karma.conf.js",
    "codeclimate": "CODECLIMATE_REPO_TOKEN=$npm_package_config_codeclimate_token codeclimate-test-reporter < reports/lcov.info",
    "build": "mkdir -p dist && browserify src/index.js -d | exorcist dist/bundle.js.map > dist/bundle.js && cp src/index.html dist/",
    "serve": "live-server src",
    "watch": "watchify src/index.js -o 'node_modules/.bin/exorcist src/bundle.js.map > src/bundle.js' -d",
    "start": "npm-run-all --parallel 'watch -s' 'serve -s' 'test:watch'"
  },
  "keywords": [
    "diagrams",
    "software",
    "architecture"
  ],
  "author": "Ryan Davis <ryepup@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.6",
    "angular-animate": "^1.5.6",
    "angular-hotkeys": "^1.6.0",
    "angular-ui-bootstrap": "^0.14.3",
    "angular-ui-codemirror": "^0.3.0",
    "angular-ui-router": "^1.0.0-alpha0",
    "codemirror": "^5.22.0",
    "lodash": "^3.10.1",
    "lz-string": "^1.4.4",
    "md5": "^2.2.1",
    "ng-file-upload": "^12.2.13",
    "ng-focus-if": "^1.0.4",
    "s-expression": "^3.0.3",
    "uuid": "^3.0.1",
    "viz.js": "^1.4.1",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.6",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "browserify-css": "^0.9.2",
    "browserify-istanbul": "^2.0.0",
    "codeclimate-test-reporter": "^0.4.0",
    "envify": "^4.0.0",
    "exorcist": "^0.4.0",
    "function-bind": "^1.0.2",
    "jasmine-core": "^2.4.1",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "live-server": "^1.1.0",
    "npm-run-all": "^4.0.0",
    "phantomjs-prebuilt": "^2.1.14",
    "stringify": "^5.1.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-css",
      [
        "stringify",
        {
          "extensions": [
            ".txt",
            ".json",
            ".dot",
            ".html",
            ".sexp"
          ]
        }
      ],
      "envify",
      [
        "uglifyify",
        {
          "ignore": "**/*.spec.js",
          "mangle": false
        }
      ]
    ]
  }
}
